#!/usr/bin/env bash
set -eou pipefail











apk add --no-cache bash bash-completion coreutils curl postgresql-client postfix mutt git vim unzip tzdata \
  && mkdir -p /root/.vim  && git clone https://github.com/Shougo/neobundle.vim ~/.vim/bundle && ~/.vim/bundle/bin/install.sh && ~/.vim/bundle/bin/neoinstall \
  && cp /usr/share/zoneinfo/America/Los_Angeles /etc/localtime \
  && echo "America/Los_Angeles" >/etc/timezone
