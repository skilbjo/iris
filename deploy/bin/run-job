#!/usr/bin/env bash
set -eou pipefail

src_dir="usr/local/src"
deploy_dir="usr/local/deploy/bin"
cmd="${src_dir}/iris"

# Prereqs
set +e
case $(uname -a) in
  *arm* )
    eval "${deploy_dir}/apk" ;;
esac

case $(cat /etc/os-release | grep -i '^name=' | sed 's/NAME=//' | sed 's/^"\(.*\)"$/\1/') in
  'Alpine Linux' )
    apk fix || echo 'Unable to reach apk... continuing...' ;;
  'Debian GNU/Linux' )
    apt-get install -y postgresql-client postfix mutt vim
    echo '' ;; # Any quirks with Debian can go here
esac
set -e

exec $cmd $@
