#!/usr/bin/env bash
set -eou pipefail

dir="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"
app_name=$(basename $(dirname $dir))

# aws
  #-e aws_access_key_id="$(echo '')" \
  #-e aws_secret_access_key="$(echo '')" \
# db
  #-e db_uri="$(echo $db_uri)" \
  #-e db_uri="$(echo 'postgres://postgres@192.168.99.100:5432:5432/postgres')" \

docker run -it --rm \
  --name="$(echo $app_name)" \
  -e aws_access_key_id="$(echo '')" \
  -e aws_secret_access_key="$(echo '')" \
  -e _email="$(echo $email)" \
  -e email_pw="$(echo $email_pw)" \
  "$app_name":dev bash
